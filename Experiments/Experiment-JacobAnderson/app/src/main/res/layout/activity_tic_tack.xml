<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicTack">

    <Button
        android:id="@+id/tic_buttonToMain"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/back_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/tic_boardVert"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tic_buttonToMain">

        <LinearLayout
            android:id="@+id/tic_rowOne"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/tic_space0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="false"
                android:text="@string/empty"
                android:textOff="@string/empty"
                android:textOn="@string/empty"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <ToggleButton
                android:id="@+id/tic_space1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="false"
                android:text="@string/empty"
                android:textOff="@string/empty"
                android:textOn="@string/empty" />

            <ToggleButton
                android:id="@+id/tic_space2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="false"
                android:text="@string/empty"
                android:textOff="@string/empty"
                android:textOn="@string/empty" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tic_rowTwo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/tic_space3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="false"
                android:text="@string/empty"
                android:textOff="@string/empty"
                android:textOn="@string/empty" />

            <ToggleButton
                android:id="@+id/tic_space4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="false"
                android:text="@string/empty"
                android:textOff="@string/empty"
                android:textOn="@string/empty" />

            <ToggleButton
                android:id="@+id/tic_space5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="false"
                android:text="@string/empty"
                android:textOff="@string/empty"
                android:textOn="@string/empty" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tic_rowThree"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/tic_space6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="false"
                android:text="@string/empty"
                android:textOff="@string/empty"
                android:textOn="@string/empty" />

            <ToggleButton
                android:id="@+id/tic_space7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="false"
                android:text="@string/empty"
                android:textOff="@string/empty"
                android:textOn="@string/empty" />

            <ToggleButton
                android:id="@+id/tic_space8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="false"
                android:text="@string/empty"
                android:textOff="@string/empty"
                android:textOn="@string/empty" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tic_outcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:text="@string/empty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tic_boardVert" />

</androidx.constraintlayout.widget.ConstraintLayout>